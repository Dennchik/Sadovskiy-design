include ../includes/mixins 
doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="description" content="Краткое описание документа")
		meta(name="keywords" content="keywords-ключевые слова для поиска")
		block link
			link(rel="icon" type="image/icon" href="@@webRoot/img/icons/icon-log.png")
			link(rel="stylesheet" type="text/css" href="@@webRoot/css/main.min.css")
			link(rel="stylesheet" type="text/css" href="@@webRoot/css/index.min.css")
		block script 
			script(defer src="@@webRoot/js/app/runtime.min.js")
			script(defer src="@@webRoot/js/app/anime-vendors.min.js")  
			script(defer src="@@webRoot/js/main.min.js") 

		block title
		- var text
			title #{text}

body 
	include ../modules/pl-preloader
	include ../includes/mixins
	div(class="wrapper")
		block page-content 
			.page#page 
				block sidebar-menu 
					include ../chunk/sidebar-menu 
				block header 
					header.page__header
						include ../layouts/header 
				main._content
					.main-content#wrapper._container
						._content#content 
							block main-content
				footer._footer
					block footer 
						include ../layouts/footer 
				block aside-button 
					._aside-button.icon#scrollButton
						+iconfont('angle-down', '_icon')